    ViewBag.Title = "Member WebPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
<script>
    console.log(@ViewBag.MemberbaseData);
    window.onload = function () {
        var options = {
            rotation: (-0.5 * Math.PI) - (-90 / 180 * Math.PI),
            legend: {
                display: false
            }
        }
        var data = {
            datasets: [{
                data: [@ViewBag.MemberbaseData],
                backgroundColor: ["#f990a7", "#aad2ed"]
            }],

            // These labels appear in the legend and in the tooltips when hovering different arcs
            labels: [
                'Member Base',
                'Referring Base'
            ],

        };

        var ctx1 = document.getElementById("cvMemberWebpage").getContext("2d");
        window.myBar = new Chart(ctx1, {
            type: 'pie',
            data: data,
            options: options

        });
        //-------------------------------------------------------------------------------------------
        var optionsProfile = {
            //rotation: (-0.5 * Math.PI) - (-90 / 180 * Math.PI),
            legend: {
                display: true,
                position: 'bottom'
            }
        }

        var dataProfile = {
            datasets: [{
                data: [@ViewBag.MemberbaseProfileData],
                backgroundColor: ["#f990a7", "#aad2ed"]
            }],

            // These labels appear in the legend and in the tooltips when hovering different arcs
            labels: [
                'Total Member Base',
                'No of Profile Update'
            ],

        };

        var ctx2 = document.getElementById("cvMemberWebpageProfile").getContext("2d");
        window.myBar = new Chart(ctx2, {
            type: 'pie',
            data: dataProfile,
            options: optionsProfile

        });

        //-----------------------------------------------------------------------------------
        var optionsGift = {
            //rotation: (-0.5 * Math.PI) - (-90 / 180 * Math.PI),
            legend: {
                display: true,
                position: 'bottom'
            }
        }
        var dataGift = {
            datasets: [{
                data: [@ViewBag.MemberbaseGiftData],
                backgroundColor: ["#f990a7", "#aad2ed"]
            }],

            // These labels appear in the legend and in the tooltips when hovering different arcs
            labels: [
                'Total Member Base',
                'Customer Gifting Points'
            ],

        };
        var ctx4 = document.getElementById("cvMemberWebpageGiftAPoint").getContext("2d");
        window.myBar = new Chart(ctx4, {
            type: 'pie',
            data: dataGift,
            options: optionsGift

        });
        
        //-------------------------------------------------------------------------------------------
        var barChartData =
            {
                labels: [@Html.Raw(ViewBag.ReferralNames)],
                datasets: [{
                    label: '',
                    backgroundColor: [
                        "#f990a7",
                        "#aad2ed",
                        "#9966FF",
                        "#99e5e5"
                    ],
                    borderWidth: 2,
                    data: [@ViewBag.ReferralData]
                }]
            };

        var ctx3 = document.getElementById("cvMemberWebpageReferral").getContext("2d");
        window.myBar = new Chart(ctx3,
            {
                type: 'bar',
                data: barChartData,
                options:
                {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    },
                    title:
                    {
                        display: true,
                        text: ""
                    },
                    legend: {
                        display: false
                    },
                    responsive: true,
                    maintainAspectRatio: true,
                    tooltips: { enabled: false },
                    hover: { mode: null },

                    "hover": {
                        "animationDuration": 0,
                        mode: null
                    },
                    "animation": {
                        "duration": 1,
                        "onComplete": function () {
                            var chartInstance = this.chart,
                                ctx = chartInstance.ctx;

                            ctx.font = Chart.helpers.fontString(Chart.defaults.global.defaultFontSize, Chart.defaults.global.defaultFontStyle, Chart.defaults.global.defaultFontFamily);
                            ctx.textAlign = 'center';
                            ctx.textBaseline = 'bottom';

                            this.data.datasets.forEach(function (dataset, i) {
                                var meta = chartInstance.controller.getDatasetMeta(i);
                                meta.data.forEach(function (bar, index) {
                                    var data = dataset.data[index];
                                    ctx.fillStyle = 'rgba(0, 0, 0, 1)';
                                    ctx.fillText(data, bar._model.x, bar._model.y - 5);
                                });
                            });
                        }
                    }
                }
            });
        //-------------------------------------------------------------------------------------------
        var optionsOpt = {
            rotation: (-0.5 * Math.PI) - (-110 / 180 * Math.PI),
            legend: {
                display: true,
                position: 'bottom'
            }
        }
        var dataOpt = {
            datasets: [{
                data: [@ViewBag.MemberbaseOptOutData],
                backgroundColor: ["#f990a7", "#aad2ed"]
            }],

            // These labels appear in the legend and in the tooltips when hovering different arcs
            labels: [
                'Program Opt-Out',
                'Promo SMS Opt-Out'
            ],

        };
        var ctx6 = document.getElementById("cvMemberWebpageOptOut").getContext("2d");
        window.myBar = new Chart(ctx6, {
            type: 'pie',
            data: dataOpt,
            options: optionsOpt

        });

        //-------------------------------------------------------------------------------------------
    }

</script>
