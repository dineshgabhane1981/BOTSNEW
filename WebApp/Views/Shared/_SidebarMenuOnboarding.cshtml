@using BOTS_BL.Models;
@{
    var userDetails = (CustomerLoginDetail)Session["UserSession"];
    var GroupId = userDetails.GroupId;
    var roleId = userDetails.LoginType;
    var level = userDetails.LevelIndicator;
}
<div class="app-sidebar sidebar-shadow">
    <div class="app-header__logo">
        <div class="logo-src"></div>
        <div class="header__pane ml-auto">
            <div>
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>
    <div class="scrollbar-sidebar">
        <div class="app-sidebar__inner">
            <ul class="vertical-nav-menu">
                @if (roleId == "1")
                {
                    <li>
                        <a href="@Url.Action("Index", "CustomerManagement")" class="@Html.IsSelected(controller: "CustomerManagement", action: "Index,SelectProduct,AddNewCustomer")">
                            <i class="metismenu-icon pe-7s-rocket"></i>
                            Customer Management
                        </a>
                    </li>
                }

                @if (roleId == "05" || roleId == "1")
                {
                    <li>
                        <a href="@Url.Action("CustomerDetail", "CustomerOnBoarding")" class="@Html.IsSelected(controller: "CustomerOnBoarding", action: "CustomerDetail")">
                            <i class="metismenu-icon pe-7s-user"></i>
                            Customer Detail
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ProductAssignmentDetails", "CustomerOnBoarding")" class="@Html.IsSelected(controller: "CustomerOnBoarding", action: "ProductAssignmentDetails")">
                            <i class="metismenu-icon pe-7s-diamond"></i>
                            Product Details
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DealDetails", "CustomerOnBoarding")" class="@Html.IsSelected(controller: "CustomerOnBoarding", action: "DealDetails")">
                            <i class="metismenu-icon pe-7s-like2"></i>
                            Deal Details
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("PaymentSchedule", "CustomerOnBoarding")" class="@Html.IsSelected(controller: "CustomerOnBoarding", action: "PaymentSchedule")">
                            <i class="metismenu-icon pe-7s-note2"></i>
                            Payment Schedule
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("UpdatePaymentDetails", "CustomerOnBoarding")" class="@Html.IsSelected(controller: "CustomerOnBoarding", action: "UpdatePaymentDetails")">
                            <i class="metismenu-icon pe-7s-credit"></i>
                            Update Payment Details
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Notifications", "CustomerOnBoarding")" class="@Html.IsSelected(controller: "CustomerOnBoarding", action: "Notifications")">
                            <i class="metismenu-icon pe-7s-volume"></i>
                            Notifications
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>
