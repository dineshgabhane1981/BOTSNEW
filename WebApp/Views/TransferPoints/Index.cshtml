
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutITOPS.cshtml";
}


<div class="app-main__inner">
    <div class="mb-3 card" style="padding-top:20px;">
        <div class="content">
            <!--content inner-->

            <div class="container overflow-hidden">
                <input type="hidden" id="hdnCustomerIdPtTrnsfr" />
                <div class="multisteps-form__panel shadow p-4 list-box bg-white" id="sec2" data-animation="scaleIn">
                    <h4 class="multisteps-form__title" style="color:blue;">Transfer Points</h4><br />
                    <div class="multisteps-form__content">
                        <div>
                            <meta name="viewport" content="width=device-width, initial-scaled=1.0">
                            <label style="padding-right:5px;padding-top:10px;">Enter Mobile Number </label>
                            <input type="number" id="txtMobileNoPtTrnsfr" class="input50" />

                            <label style="padding-right:30px;padding-top:10px;padding-left:30px;"><b>(OR)</b> </label>

                            <label style="padding-right:5px;padding-top:10px;">Enter Card Number </label>
                            <input type="number" id="txtCardNoPtTrnsfr" class="input50" />
                            <button type="button" id="btnSearchMemberPtTrnsfr" style="margin-left:15px;margin-top:10px;" class="btn btn-primary">Go</button>
                        </div>
                        <div>
                            <div style="margin-left:30px;margin-bottom:30px;margin-top:30px;">
                                <input type="radio" name="first_item1" id="rbtnSMSPtTrnsfr" /> Send SMS
                                <input type="radio" name="first_item1" style="margin-left:30px;" checked id="rbtnNOSMSPtTrnsfr" /> Don't Send SMS
                            </div>
                            <div style="display:flex; height:auto !important;margin-top:50px;">
                                <input type="hidden" id="hdnCustomerIdPtTrnsfr" />
                                <div class="col-md-4 col-lg-4" style="padding-left: 0px !important; margin-bottom: 10px; float: left;">
                                    <table border="1" cellpadding="5" cellspacing="5">
                                        <tr position: absolute top: -9999px; left: -9998px;>
                                            <th colspan="2" style="padding:10px;text-align:center;">Existing Member Details</th>
                                        </tr>
                                        <tr border: 1px solid #ccc;>
                                            <td style="padding:10px;">Member Name</td>
                                            <td style="padding:10px;width:150px;"><span style="color:red;" id="spnMemberNamePtTrnsfr"></span></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Mobile No</td>
                                            <td style="padding:10px;"><span id="spnMobilenoPtTrnsfr"></span></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Old Mobile No</td>
                                            <td style="padding:10px;"><span id="spnOldMobilenoPtTrnsfr"></span></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Card No</td>
                                            <td style="padding:10px;"><span id="spnCardNoPtTrnsfr"></span></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Points Balance</td>
                                            <td style="padding:10px;"><span id="spnPtBalancePtTrnsfr"></span></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Enrolled Outlet</td>
                                            <td style="padding:10px;"><span id="spnEnrolledOutletPtTrnsfr"></span></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Enrolled On</td>
                                            <td style="padding:10px;">
                                                <span id="spnEnrolledOnPtTrnsfr"></span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-5 col-lg-5" style="padding-left: 0px !important; float: left;">
                                    <table border="1" cellpadding="5" cellspacing="5" id="tblUpdateDataPtTrnsfr" style="display:none;">
                                        <tr>
                                            <th colspan="2" style="padding:10px;text-align:center;">Modify Transfer Points</th>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Enter New Mobile Number</td>
                                            <td style="padding:10px;width:200px;">
                                                <input type="number" id="txtNewMobileNoPtTrnsfr" placeholder="Mobile No" class="input50" />

                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Requested by</td>
                                            <td style="padding:10px;">
                                                <input type="text" id="txtRequestedByNamePtTrnsfr" placeholder="Requested By" class="input50" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Requested on Forum</td>
                                            <td style="padding:10px;">
                                                <select name="ddlRequestedForum1" id="ddlRequestedForumPtTrnsfr" class="input50">
                                                    <option value="Whatsapp">Whatsapp</option>
                                                    <option value="Email">Email</option>
                                                    <option value="Phone">Phone</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding:10px;">Transaction Date</td>
                                            <td style="padding:10px;"><input type="text" id="dtEnrolledOnPtTrnsfr" class="input50" /></td>
                                        </tr>
                                    </table>
                                </div>
                            </>
                        </div>
                        <div class="button-row mt-5" style="text-align:end;">
                            <button class="btn btn-primary ml-auto mt-3" type="button" title="Next" id="btnSaveMemberMobilePtTrnsfr" tabindex="20">Save</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>

<script>
    $(document).ready(function () {

        var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
        // alert(today);
        $("#dtEnrolledOnPtTrnsfr").datepicker({

            dateFormat: "yy-mm-dd",
            maxDate: today,
            //  minDate: '-4'
        });
    });

    $('#btnchgmobPtTrnsfr').on("click", function () {
        GetClearAllTab();
    });
    $('#btnSearchMemberPtTrnsfr').on("click", function () {
        GetChangeMobileData();
    });
    $('#btnSaveMemberMobilePtTrnsfr').on("click", function () {
        SaveMemberMobile();
    });
    function GetChangeMobileData() {
        if ($('#txtMobileNoPtTrnsfr').val() == "" && $('#txtCardNoPtTrnsfr').val() == "") {
            toastr.error('Please enter Mobile Number OR Card Number');
            return false
        }
        //if ($('#txtCardNo1').val() == "") {
        //    toastr.error('Please enter Mobile Number OR Card Number');
        //    return false
        //}
        $("#divLoader").show();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetChangeNameData", "TransferPoints")',
            data: '{MobileNo:' + JSON.stringify($('#txtMobileNoPtTrnsfr').val()) + ',CardNo: ' + JSON.stringify($('#txtCardNoPtTrnsfr').val()) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.MemberName != null) {
                    $("#spnMemberNamePtTrnsfr").text(result.MemberName);
                    $("#spnMobilenoPtTrnsfr").text(result.MobileNo);
                    $("#spnOldMobilenoPtTrnsfr").text(result.OldMobileNo);
                    $("#spnCardNoPtTrnsfr").text(result.CardNo);
                    $("#spnPtBalancePtTrnsfr").text(result.PointsBalance);
                    $("#spnEnrolledOutletPtTrnsfr").text(result.EnrolledOutletName);
                    $("#spnEnrolledOnPtTrnsfr").text(result.EnrolledOn);
                    $("#hdnCustomerIdPtTrnsfr").val(result.CustomerId);

                    $('#txtNewMobileNoPtTrnsfr').val("");
                    $('#txtRequestedByNamePtTrnsfr').val("");
                    $('#ddlRequestedForumPtTrnsfr').prop('selectedIndex', 0);
                    $("#dtEnrolledOnPtTrnsfr").val("");
                    $("#tblUpdateDataPtTrnsfr").show();
                }
                else {
                    toastr.error('Member not present. Please check entered Mobile Number OR Card Number');
                    $("#spnMemberNamePtTrnsfr").text("");
                    $("#spnMobilenoPtTrnsfr").text("");
                    $("#spnOldMobilenoPtTrnsfr").text("");
                    $("#spnCardNoPtTrnsfr").text("");
                    $("#spnPtBalancePtTrnsfr").text("");
                    $("#spnEnrolledOutletPtTrnsfr").text("");
                    $("#spnEnrolledOnPtTrnsfr").text("");
                    $("#hdnCustomerIdPtTrnsfr").val("");

                    $('#txtNewMobileNoPtTrnsfr').val("");
                    $('#txtRequestedByNamePtTrnsfr').val("");
                    $('#ddlRequestedForumPtTrnsfr').prop('selectedIndex', 0);
                    $("#tblUpdateDataPtTrnsfr").hide();
                }
                $("#divLoader").hide();
            },
            error: function (result) {
                console.log(result.responseText)
                $("#divLoader").hide();
            }
        });
    }
    function SaveMemberMobile() {
        if ($('#txtNewMobileNoPtTrnsfr').val() == "") {
            toastr.error('Please enter Mobile No');
            $('#txtNewMobileNoPtTrnsfr').focus();
            return false;
        }
        if ($('#txtNewMobileNoPtTrnsfr').val().length != 10) {
            toastr.error('Mobile No should be 10 digits');
            $('#txtNewMobileNoPtTrnsfr').focus();
            return false;
        }

        if ($('#txtRequestedByNamePtTrnsfr').val() == "") {
            toastr.error('Please enter Requested Person name');
            $('#txtRequestedByNamePtTrnsfr').focus();
            return false;
        }
        if ($('#dtEnrolledOnPtTrnsfr').val() == "") {
            toastr.error('Please select transaction date');
            $('#dtEnrolledOnPtTrnsfr').focus();
            return false;
        }
        if (confirm("Are you sure? You want to change Mobile No")) {
            var MemberData = [];
            item = {}
            item["GroupID"] = $("#hdnGroupId").val();
            item["CustomerId"] = $("#hdnCustomerIdPtTrnsfr").val();
            item["MobileNo"] = $("#txtNewMobileNoPtTrnsfr").val();
            item["OldMobileNo"] = $("#spnOldMobilenoPtTrnsfr").val();
            item["RequestedBy"] = $("#txtRequestedByNamePtTrnsfr").val();
            item["RequestedForum"] = $('#ddlRequestedForumPtTrnsfr :selected').text();
            item["RequestedOn"] = $("#dtEnrolledOnPtTrnsfr").val();
            console.log($("#dtEnrolledOnPtTrnsfr").val());
            if ($('#rbtnSMSPtTrnsfr').is(":checked")) {
                item["IsSMS"] = 1;
            }
            if ($('#rbtnNOSMSPtTrnsfr').is(":checked")) {
                item["IsSMS"] = 0;
            }
            MemberData.push(item);
            var data = JSON.stringify(MemberData);
          //  console.log(data)
            $("#divLoader").show();
            $.ajax({
                type: "POST",
                url: '@Url.Action("ChangeExistingMemberMobile", "TransferPoints")',//"/ITOperations/ChangeMemberMobile",
                data: '{jsonData: ' + JSON.stringify(data) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.ResponseCode == "00") {
                        toastr.success(result.ResponseMessage);
                        $("#divLoader").hide();
                        $('#sec2').find(':input').val('');
                    }
                    else {
                        toastr.error(result.ResponseMessage);
                        $("#divLoader").hide();
                    }
                },
                error: function (result) {
                    console.log(result.responseText)
                    if (result.responseText == "True") {
                        toastr.success("Mobile No Updated Successfully");
                        $("#divLoader").hide();
                        $('#sec2').find(':input').val('');
                    }
                    else {
                        toastr.error('error occured while saving data');
                        $("#divLoader").hide();
                    }
                }
            });
        }
    }
</script>
