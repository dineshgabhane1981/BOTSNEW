@model List<BOTS_BL.Models.CommonDB.RMAssignedDetails>
@{
    ViewBag.Title = "CsMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-main__inner">
    <div class="row mb-3 card">
        <div class="container-fluid pt-3 pl-3 pr-3">
            <div class="pb-3">
                <h4><b>Customer Success</b></h4>
            </div>

            <div class="pt-3 pl-3 pr-3 col-md-12 col-lg-12">
                <div class="col-md-8 col-lg-8 mb-5" id="divadd" style="display:none; border:1px solid grey; border-radius:10px;">
                    <div class="mb-4">
                        <h6><b>Add Customer Success</b></h6>
                    </div>
                    <div class="col-md-12 col-lg-12 mt-2 mb-4">
                        Customer Success Name  <input class="input100" type="text" id="txtCSNm" />
                        <span id="hdnCSId" style="display:none;"></span>
                        <button class="btn btn-primary login-btn ml-5 mr-2" type="button" id="btnSave">
                            Save
                        </button>
                        <button class="btn btn-primary login-btn" type="button" id="btnCancle">
                            Cancel
                        </button>
                    </div>
                    </div>
                    <div class="row">
                        <div class="col search-container">
                            <i class="fas fa-search"></i>
                            <input class="input100" type="text" id="txtSearch" placeholder="Search activity..." />
                        </div>
                        <div style="text-align:right;" class="pr-2">
                            <button class="btn btn-primary login-btn" type="button" id="btnAdd">
                                ADD
                            </button>

                        </div>
                    </div>

                    <div class="row mt-3" id="dvActivityData">
                        <div class="table-responsive">
                            <table class="table" id="groupListTable">
                                <thead>
                                    <tr>
                                        <th scope="col" style="text-align:left;">Customer Success Name</th>
                                        <th scope="col" style="text-align:left;">Created By</th>
                                        <th scope="col" style="text-align:left;">Created On</th>
                                        <th scope="col" style="text-align:left;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.Count > 0)
                                        {
                                            foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td style="text-align:left;">@item.RMAssignedName</td>
                                                    <td style="text-align:left;">@item.UserName</td>
                                                    <td style="text-align:left;">@item.CreatedDate</td>
                                                    <td style="text-align:left; width:100px;">
                                                        <a href="#" class="login" onclick="EditCS(@item.RMAssignedId)" title="Edit"><img src="~/Content/assets/images/shape_editUser.png" /></a>
                                                        @if (item.IsActive == true)
                                                        {
                                                            <a href="#" class="login" title="Deactivate"><img src="~/Content/assets/images/shape_activate.png" onclick="ActivateDeactivate(@item.RMAssignedId);" /></a>
                                                        }
                                                        else
                                                        {
                                                            <a href="#" class="login" title="Activate"><img src="~/Content/assets/images/shape_deactivate.png" onclick="ActivateDeactivate(@item.RMAssignedId);" /></a>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<script>

    $('#btnAdd').on("click", function () {
        $("#divadd").show(1000);

    });
    $('#btnCancle').on("click", function () {
        $("#divadd").hide(1000);
        $('#divadd').find(':input').val('');
        $("#hdnCSId").text("");
    });
    $('#btnSave').on("click", function () {

        if ($('#txtCSNm').val() == "") {
            toastr.error('Please enter Customer Success Name');
            $('#txtCSNm').focus();
            return false;
        }

        if (confirm("Are you sure? You want to Add Customer Success name")) {
            var CSData = [];
            item = {}
            item["CSNm"] = $("#txtCSNm").val();
            if ($('#hdnCSId').text != 0) {
                item["CSId"] = $('#hdnCSId').text();
            }
            else {
                item["CSId"] = 0;
            }
            CSData.push(item);
            var data = JSON.stringify(CSData);
            console.log(data)
            $("#divLoader").show();
            $.ajax({
                type: "POST",
                url: '@Url.Action("AddRM", "CustomerMaster")',
                data: '{jsonData: ' + JSON.stringify(data) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.ResponseCode == "00") {
                        toastr.success(result.ResponseMessage);
                        $("#divLoader").hide();
                        $("#txtCSNm").val("");
                        $('#hdnCSId').val("");

                    }
                    else {
                        toastr.error(result.ResponseMessage);
                        $("#divLoader").hide();
                    }
                },
                error: function (result) {
                    console.log(result.responseText)
                    if (result.responseText == "True") {
                        toastr.success("Data Updated Successfully");
                        $("#divLoader").hide();
                    }
                    else {
                        toastr.error('error occured while saving data');
                        $("#divLoader").hide();
                    }
                }
            });
       // }
    }
    });

     function EditCS(id) {

        $("#divLoader").show();
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetRM", "CustomerMaster")',
                data: '{RMId: ' + JSON.stringify(id) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (responce) {
                    console.log(responce);
                    if (responce.RMAssignedName != null) {
                        $("#divLoader").hide();
                        $("#divadd").show(1000);
                        $('#txtCSNm').val(responce.RMAssignedName);
                        $("#btnSave").show();
                        $("#hdnCSId").text(id);

                    }
                    else {

                    }

                },
                error: function (result) {
                    console.log(result.responseText)
                    if (result.responseText == "True") {
                        toastr.success("Data Updated Successfully");
                        $("#divLoader").hide();
                    }
                    else {
                        toastr.error('error occured while saving data');
                        $("#divLoader").hide();
                    }
                }
            });
    }

    function ActivateDeactivate(RMAssignedId) {

        if (confirm("Are you sure? You want to Active/Inactive Customer Success ")) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("ActiveInactiveCustomerSuccess", "CustomerMaster")',
                data: '{RmAssignedId: ' + JSON.stringify(RMAssignedId) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    console.log(result);
                    if (result.ResponseCode == "00") {
                        toastr.success(result.ResponseMessage);
                        $("#divLoader").hide();

                    }
                    else {
                        toastr.error(result.ResponseMessage);
                        $("#divLoader").hide();
                    }


                },
                failure: function (result) {
                    console.log(result);
                },
                error: function (result) {
                    console.log(result);
                }
            });

        }
    }
</script>

