
@{
    ViewBag.Title = "CampaignManagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Campaign Management</h2>
<div class="app-main__inner" id="dvall">
    <div class="container-fluid pt-3 pl-3 pr-3 pb-3">
        <div class="mb-3 pr-3 pt-3 pl-3 card" style="padding-bottom:20px;">
            <div>
                <div class="row" style="margin-top : 20px;">
                    <div class="col-sm-2">
                        <b>Campaign Details</b>
                    </div>
                </div>
                @if (ViewBag.ListCampDetails.Count > 0)
                {
                    <div class="row" style="overflow-x:auto;padding-right:20px;margin-top:10px;margin-left:60px;">


                        <table border="1" cellpadding="5" cellspacing="5">
                            <tr>
                                <th>Campaign ID</th>
                                <th>Campaign Name</th>
                                <th>Member Count</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                            </tr>
                            @foreach (var item in ViewBag.ListCampDetails)
                            {
                                var total = Convert.ToInt64(item.ControlBase) + Convert.ToInt64(item.CampaignBase);
                                <tr>
                                    <td>@item.CampaignId</td>
                                    @*<td style="text-align:center;">--</td>*@

                                    <td>@item.CampaignName</td>

                                    <td>@total</td>

                                    <td>@item.StartDate</td>

                                    <td>@item.EndDate</td>

                                    <td>@item.Status</td>
                                </tr>
                            }
                        </table>

                    </div>
                    <div class="row" style="margin-top : 20px; margin-left:50px;">
                        * Last 5 Campaigns
                    </div>
                }
                else
                {
                    <div class="row" style="margin-top : 20px; margin-left:50px;">
                        <h6 style="font:xx-large"><b>No Campaigns</b></h6>
                    </div>
                }

                <div class="row" style="margin-top : 20px; margin-left:30px;">
                    <div class="col-md-3 col-xl-3">
                        @*<div class="button">
                                <button type="button" id="btnLinkCampaign" style="margin-left:15px;" class="btn btn-primary" onclick="LinkCreateCamp();"><b>CreateCampaign</b></button>
                            </div>*@
                        <a href="@Url.Action("CreateCampaign", "Campaigns")" class="btn btn-primary" role="button" data-bs-toggle="button">Create Campaign</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

