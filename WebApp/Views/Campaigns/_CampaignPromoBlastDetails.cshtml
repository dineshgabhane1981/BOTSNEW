@model List<BOTS_BL.Models.PromoBlastDetails>
@using System.Globalization


<div class="table-responsive">
    <div style="font-size:18px;color:blue;font-weight:bold;">Detailed</div>
    <table class="table" id="tblCampaignPromoBlastDetails">
        <thead>
            <tr>
                <th>Mobile No</th>
                <th>Member Name</th>
                <th>Enrolled Outlet</th>
                <th>Txn Count</th>
                <th>Business Generated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MobileNo</td>
                    <td>@item.Name</td>
                    <td>@item.EnrolledOutlet</td>
                    <td>@item.TotalTxnCount</td>
                    <td>@String.Format(new CultureInfo("en-IN", false), "{0:n2}", Convert.ToDouble(item.BusinessGenerated))</td>                    
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#tblCampaignPromoBlastDetails').DataTable({
            "aaSorting": [[1, "asc"]],
            "paging": true,
            "ordering": true,
            "info": true,
            "bFilter": true,
            "pageLength": 25,
            "pagingType": "simple_numbers",
            aoColumnDefs: [
                {
                    bSortable: false,
                    aTargets: [-1, -2]
                }
            ]
        });
        var table = $('#tblCampaignPromoBlastDetails').DataTable();
        table.draw();
       
    });
</script>
