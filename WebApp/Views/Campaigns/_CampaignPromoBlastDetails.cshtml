@model List<BOTS_BL.Models.PromoBlastDetails>
@using System.Globalization


<div class="table-responsive">
    <div style="font-size:18px;color:blue;font-weight:bold;">Detailed</div>
    <table class="table" id="tblCampaignPromoBlastDetails">
        <thead>
            <tr>
                <th>Mobile No</th>
                <th>Member Name</th>
                <th>Enrolled Outlet</th>
                <th>Txn Count</th>
                <th>Business Generated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MobileNo</td>
                    <td>@item.Name</td>
                    <td>@item.EnrolledOutlet</td>
                    <td>@item.TotalTxnCount</td>
                    <td>@String.Format(new CultureInfo("en-IN", false), "{0:n2}", Convert.ToDouble(item.BusinessGenerated))</td>                    
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        var table1 = $('#tblCampaignPromoBlastDetails').DataTable();
        table1.destroy();
        var table = $('#tblCampaignPromoBlastDetails').DataTable({
            "bAutoWidth": false,
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false,
            "pageLength": 25,
            "pagingType": "simple_numbers",
            "columns": [
                { data: "MobileNo" },
                { data: "Name" },
                { data: "EnrolledOutlet" },
                { data: "TotalTxnCount" },
                { data: "BusinessGenerated" }
            ]
        });
        $('#tblCampaignPromoBlastDetails_filter').hide();

        var table = $('#tblCampaignPromoBlastDetails').DataTable();
        table.draw();
    });
</script>
