@model WebApp.ViewModel.EventViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<style>
    .title {
        text-align: center;
        font-size: 20px;
        font-style: italic;
    }
</style>*@
<div class="container-fluid pt-3 pl-3 pr-3" style="margin-top:10px">
    @*<div class="title">
        <b>List Of Event</b>
    </div>*@
    
    <div class="row mb-5 ml-1 card" style="border-radius:20px">
        <div class="row mt-3 p-4" id="dvneverOptedForData">
            @if (Model.lstEvent != null)
            {
            <div class="table-responsive">
                <table class="table" id="neverOptedForTable">
                    <thead>
                        <tr>
                            <th scope="col" style="text-align:left;">Event Id</th>
                            <th scope="col" style="text-align:left;">Event Name</th>
                            <th scope="col" style="text-align: center;">Place</th>
                            <th scope="col" style="text-align: center;">Event Type</th>
                            <th scope="col" style="text-align: center;">StartDate</th>
                            <th scope="col" style="text-align: center;">EndDate</th>
                            <th scope="col" style="text-align: center;">BonusPoints</th>
                            <th scope="col" style="text-align: center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.lstEvent != null)
                        {
                            foreach (var item in Model.lstEvent)
                            {
                                string GroupId = Convert.ToString(item.GroupId);
                                string EventId = Convert.ToString(item.EventId);
                        <tr>
                            <td>@item.EventId</td>
                            <td>@item.EventName</td>
                            <td>@item.Place</td>
                            <td>@item.EventType</td>
                            <td>@item.EventStartDate</td>
                            <td>@item.EventEndDate</td>
                            <td>@item.BonusPoints</td>
                            <td style="text-align:center;">

                                <a href="" class="login" title="Start Event"><img src="~/Content/assets/images/Start.png" width="30" /></a>
                                <a href="@Url.Action("EventEdit", "Events")" class="login" title="Edit Event"><img src="~/Content/assets/images/Edit.png" width="30" /></a>
                                <td style="margin-left:40px;"><img src="~/Content/assets/images/Delete1.png" onclick="EventDelete(@item.GroupId,@item.EventId);" style="cursor:pointer;" width="30" /></td>
                            
                        </tr>
                                }
                            }

                    </tbody>
                </table>
            </div>
            }
            else
            {
            <div class="row" style="margin-top : 5px; margin-left:10px;">
                <h6 style="font:xx-large"><b>No Events Found</b></h6>
            </div>
            }
        </div>

        <div class="row mb-2 ml-1 mt-5" style="padding-top:4px">
            <div class="col-md-3 col-xl-6" style="margin-left: 18px; margin-top: 5px; ">
                <a href="@Url.Action("CreateEvent", "Events")" class="btn btn-primary" role="button" data-bs-toggle="button">Create Event</a>
            </div>
        </div>
        
        
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#btnDelete').on("click", function () {
            EventDelete();
        });
        $("#hdnGroupId").val(@Html.Raw(ViewBag.GroupId));
    });

    function EventDelete(GroupId, EventId) {
        cuteAlert({
            type: "question",
            title: "Confirmation",
            message: "Do you want to delete the customer ?",
            confirmText: "Yes",
            cancelText: "No"
        }).then((e) => {
            if (e == ("confirm")) {                
                var MemberData = [];
                item = {}
                item["GroupId"] = GroupId;
                item["EventId"] = EventId;
                
                MemberData.push(item);
                var data = JSON.stringify(MemberData);
                console.log(data)
                $("#divLoader").show();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteEventDetails", "Events")',
                    data: '{jsonData: ' + JSON.stringify(data) + '}',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        console.log(result)
                        if (result == true) {
                            cuteAlert({
                                type: "success",
                                title: "Saved",
                                message: "Event Deleted successfully",
                                buttonText: "Okay"
                                
                            }).then(() => {
                                var urlLink = "@Url.Action("Index", "Events")";
                                window.location.href = urlLink;
                            })
                            $("#divLoader").hide();
                        }
                        else {
                            cuteAlert({
                                type: "error",
                                title: "Oops..",
                                message: "There is a problem while Deleting Event",
                                buttonText: "Okay"
                            })
                            $("#divLoader").hide();
                        }
                        
                    },
                    error: function (result) {
                        console.log(result.responseText)


                    }
                });
            }
        })


    }
    


</script>




