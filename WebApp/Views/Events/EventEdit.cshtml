                    @Html.TextBoxFor(model => model.objEvent.Addeddate, new { @class = "input100", @id = "IdEventDate" })
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="small mb-1 ml-3">Event Start</label>
                    <input class="input50 ml-3" id="IdEventStrDate" value="@Model.objEvent.EventStartDate" type="text" />
