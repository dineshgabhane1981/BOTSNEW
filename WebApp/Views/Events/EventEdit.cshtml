                <div class="col-md-6">
                    <label class="small mb-1  ml-3">End Dates</label>
                    <input class="input50 ml-3" id="IdEventEndDate" value="@Model.objEvent.EventEndDate" type="text" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="small mb-1 ml-3">Bonus Points</label>
                    <input class="input50 ml-3" id="IdBonusPoints" value="@Model.objEvent.BonusPoints" type="text" />
                </div>
                <div class="col-md-6">
                    <label class="small mb-1  ml-3">Bonus Points Expiry</label>
                    <input class="input50 ml-3" id="IdPointsExp" value="@Model.objEvent.PointsExpiryDays" type="text" />
