@model List<BOTS_BL.Models.CommonDB.DiscussionDetails>

<style>

    /* The Modal (background) */
    .modal {
        display: none; /*Hidden by default */
        position: fixed; /*Stay in place */
        z-index: 5000 !important; /*Sit on top */
        padding-top: 100px; /*Location of the box */
        left: 120px;
        top: 0;
        width: 100%; /*Full width */
        height: 100%; /*Full height */
        overflow: auto; /*Enable scroll if needed */
        background-color: rgb(0,0,0); /*Fallback color */
        background-color: rgba(0,0,0,0.4); /*Black w/ opacity*/
    }

    Modal Content
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 70%;
        border-radius: 25px;
    }

    The Close Button
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }

    input:read-only {
        background-color: lightgray;
    }
</style>
<div class="row mb-3 card">
    <div class="container-fluid pt-3 pl-3 pr-3">
        <div class="pt-3 pl-3 pr-3 col-md-12 col-lg-12">
            <div class="row">
                <div class="col search-container">
                    <i class="fas fa-search"></i>
                    <input class="input100" type="text" id="txtSearch" placeholder="Search discussion..." />
                </div>
            </div>
            <div class="row mt-3" id="dvDiscussionData">
                <div class="table-responsive">
                    <table class="table" id="discussionTable">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Group Name</th>
                                <th scope="col">Date</th>
                                <th scope="col">Spoken To</th>
                                <th scope="col">Number</th>
                                <th scope="col">Customer Type</th>
                                <th scope="col">Call Type</th>
                                <th scope="col">FollowUp Date</th>
                                <th scope="col">Call Mode</th>
                                <th scope="col">Status</th>
                                <th scope="col">Description</th>
                                <th scope="col">Action Item</th>
                                <th scope="col">Raised By</th>


                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    var followupdate = "--";
                                    if (item.FollowupDate.HasValue)
                                    {
                                        followupdate = item.FollowupDate.Value.ToString();//.ToString("yyyy-MM-dd");
                                    }
                                    var imgId = "imgExpand" + item.Id;
                                    <tr>

                                        <td style="text-align:center;">
                                            <img id="@imgId" src="~/Content/assets/images/details_open.png" style="cursor:pointer;" onclick="ShowActivities(@item.Id);" />

                                        </td>
                                        <td>@item.GroupName</td>
                                        <td>@item.AddedDate</td>
                                        <td>@item.SpokenTo</td>
                                        <td>@item.ContactNo</td>
                                        <td>@item.CustomerType</td>
                                        <td>@item.CallType</td>
                                        @if (followupdate == "--")
                                        {
                                            <td style="text-align:center;">--</td>
                                        }
                                        else
                                        {
                                            <td>@followupdate</td>
                                        }
                                        <td>@item.CallMode</td>

                                        @if (item.Status == "Completed")
                                        {
                                            <td style="background-color:lightgreen;">@item.Status</td>
                                        }
                                        else if (item.Status == "WIP")
                                        {
                                            if (item.FollowupDate <= DateTime.Now.AddDays(-3))
                                            {
                                                <td style="background-color:red;">@item.Status</td>
                                            }
                                            else
                                            {
                                                <td style="background-color:orange;">@item.Status</td>
                                            }
                                        }
                                        else
                                        {
                                            <td style="background-color:orange;">--</td>
                                        }

                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <td>@item.Description</td>
                                        }
                                        else
                                        {
                                            <td>--</td>
                                        }
                                        @if (!string.IsNullOrEmpty(item.ActionItems))
                                        {
                                            <td>@item.ActionItems</td>
                                        }
                                        else
                                        {
                                            <td>--</td>
                                        }


                                        <td>@item.AddedBy</td>

                                    </tr>

                                    var dynamicIdTr = "trActivities" + item.Id;
                                    var dynamicIdDiv = "dvDiscussionData" + item.Id;

                                    <tr id="@dynamicIdTr" style="display:none;">
                                        <td colspan="13">
                                            <div id="@dynamicIdDiv" style="display:none;" class="table-responsive">

                                            </div>
                                        </td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                        <td style="display:none;"></td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="13" align="center">No Discussion Available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#discussionTable').DataTable({
            "aaSorting": [],
            "paging": true,
            "ordering": false,
            "info": true,
            "bFilter": true,
            "pageLength": 50,
            "pagingType": "simple_numbers"
        });

        $('#discussionTable_filter').hide();

        $('#txtSearch').on('keyup', function () {

            $.fn.dataTable.ext.search.push(function (settings, searchData) {
                var term = $('#txtSearch').val().toLowerCase()
                for (var i = 0; i < searchData.length; i++) {
                    if (searchData[i].toLowerCase().indexOf(term) >= 0) {
                        return true;
                    }
                }
                return false;
            });
            var table1 = $('#discussionTable').DataTable();
            table1.draw();
        });


    });




</script>

