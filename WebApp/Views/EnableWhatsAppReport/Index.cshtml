@model WebApp.ViewModel.ITOPSAddWAReportViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutITOPS.cshtml";
}

<div class="app-main__inner">
    <div class="mb-3 card" style="padding-top:20px;">
        <div class="content">
            <div class="container overflow-hidden">
                <div class="multisteps-form__panel shadow p-4 list-box bg-white mb-4" style="height:auto !important;" id="sec7" data-animation="scaleIn">
                    <h4 class="multisteps-form__title" style="color:blue;">WA Report Details</h4><br />
                    <div class="multisteps-form__content">
                        <div>
                            <input type="hidden" id="hdnGroupId" value="@Model.objWADetails.Groupid" />
                            <input type="hidden" id="hdnGroupCode" value="@Model.objWADetails.GroupCode"/>
                        </div>
                        @if(Model.objWADetails.Status == "0")
                        {
                    <div>
                        <div class="row mt-3" id="dvTLog">
                            <div class="table-responsive">
                                <table class="table" id="logTable">
                                    <thead style="text-align:center;">
                                        <tr>
                                            <th scope="col">GroupId</th>
                                            <th scope="col">Group Name</th>
                                            <th scope="col">Group Code</th>
                                            <th scope="col">WA Group Name</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align:center;">
                                        <tr>
                                            <td>@Model.objWADetails.Groupid</td>
                                            <td>@Model.objWADetails.GroupName</td>
                                            <td>@Model.objWADetails.GroupCode</td>
                                            <td>@Model.objWADetails.WAGroupName</td>
                                            <td><b>Enabled</b></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                      }
                        
                    </div>
                </div>
                <div id="divConfigWAReport" style="display:none">
                    <div class="multisteps-form__panel shadow p-4 list-box bg-white mt-4 mb-4" id="sec3" data-animation="scaleIn">
                        <h4 class="multisteps-form__title" style="color:blue;">Configure Report</h4><br />
                        <div class="multisteps-form__content">
                            <div class="row" style="margin: 0;">
                                <input type="hidden" id="hdnGroupId" />
                                <div style="float: left; text-align: right; width: 100px; margin-top: 10px;">
                                    WhatsApp Group :
                                </div>
                                <div class="col-sm-4" style="float:left;margin-top:10px;">
                                    <select id="ddlSelect" class="input70" style="font-size:medium;" placeholder="Enter WhatsApp Group Name">
                                        <option value="Select">-Select-</option>
                                        @for(int i = 0;i< Model.LstWAAPIDetails.Count();i++)
                                         {
                                            <option value="@Model.LstWAAPIDetails[i].id">
                                                @Model.LstWAAPIDetails[i].name
                                            </option>
                                         }
                                    </select>
                                </div>
                                <div style="float: left; text-align: right; width: 100px; margin-top: 10px;">
                                    <button type="button" id="btnSaveGroupName" style="margin-left:15px;margin-top:10px;" class="btn btn-primary">Save</button>
                                </div>
                                <div class="col-sm-4" style="float:left;margin-top:10px;">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/ITOPS/EnableWAReport.js"></script>
<link href="~/Content/select2.min.css" rel="stylesheet" />
<!-- Select2 JS -->
<script src="~/Scripts/select2.min.js"></script>

