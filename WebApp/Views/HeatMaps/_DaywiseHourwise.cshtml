@model List<BOTS_BL.Models.DaywiseHourwise>


<div class="row mb-3 pt-3 pl-3 pr-3" style="padding-bottom:20px;">
    <div class="col-sm-12">
        <table border="1" cellpadding="10" cellspacing="10">
            <tr style="text-align:center;">
                <th style="width:14%; background-color:#DCDCDC;"><b>Hours/Day</b></th>
                <th style="width:12.5%; background-color:#DCDCDC;">MON</th>
                <th style="width:12.5%; background-color:#DCDCDC;">TUE</th>
                <th style="width:12.5%; background-color:#DCDCDC;">WED</th>
                <th style="width:12.5%; background-color:#DCDCDC;">THU</th>
                <th style="width:12.5%; background-color:#DCDCDC;">FRI</th>
                <th style="width:12.5%; background-color:#DCDCDC;">SAT</th>
                <th style="width:12.5%; background-color:#DCDCDC;">SUN</th>
            </tr>
            @if (Model != null)
            {
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {


                        <tr style="text-align:center;">
                            <td style="background-color:#DCDCDC;"><b>@item.Hours_Day</b></td>
                            <td style="color: white; background-color: @item.MON"><b>@item.MONValue</b></td>
                            <td style="color: white; background-color: @item.TUE"><b>@item.TUEValue</b></td>
                            <td style="color: white; background-color: @item.WED"><b>@item.WEDValue</b></td>
                            <td style="color: white; background-color: @item.THU"><b>@item.THUValue</b></td>
                            <td style="color: white; background-color: @item.FIR"><b>@item.FIRValue</b></td>
                            <td style="color: white; background-color: @item.SAT"><b>@item.SATValue</b></td>
                            <td style="color:white; background-color: @item.SUN"><b>@item.SUNValue</b></td>
                        </tr>

                    }
                }
            }
        </table>
    </div>
</div>

