@model BOTS_BL.Models.Celebrations
@{
    ViewBag.Title = "Celebrations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-main__inner">
    <div class="row mb-3 card">
        <div class="container-fluid pt-3 pl-3 pr-3">
            <div class="row col-6">
                <table class="table" style="border:1px solid gray;">
                    <tr>
                        <th scope="col" colspan="3" style="text-align:center;">Celebrations in</th>
                    </tr>
                    <tr>
                        <th scope="col">Period</th>
                        <th scope="col" style="text-align:center;">Current Month</th>
                        <th scope="col" style="text-align:center;">Next Month</th>
                    </tr>
                    <tr>
                        <td>Birthdays</td>
                        <td style="text-align:center; color:blue;cursor:pointer;"><a onclick="GetData(1,1);"><u>@Model.BirthdayCountThisMonth</u></a></td>
                        <td style="text-align:center; color:blue;cursor:pointer;"><a onclick="GetData(2,1);"><u>@Model.BirthdayCountNextMonth</u></a></td>
                    </tr>
                    <tr>
                        <td>Marriage Anniversaries</td>
                        <td style="text-align:center;color:blue;cursor:pointer;"><a onclick="GetData(1,2);"><u>@Model.AnniversaryCountThisMonth</u></a></td>
                        <td style="text-align:center;color:blue;cursor:pointer;"><a onclick="GetData(2,2);"><u>@Model.AnniversaryCountNextMonth</u></a></td>
                    </tr>
                    <tr>
                        <td>Enrolment Anniversaries</td>
                        <td style="text-align:center;color:blue;cursor:pointer;"><a onclick="GetData(1,3);"><u>@Model.EnrollmentAnniversaryCountThisMonth</u></a></td>
                        <td style="text-align:center;color:blue;cursor:pointer;"><a onclick="GetData(2,3);"><u>@Model.EnrollmentAnniversaryCountNextMonth</u></a></td>
                    </tr>
                </table>
            </div>


        </div>
    </div>

    <div class="row mb-3 pt-3 pl-3 pr-3 card" id="dvCelebrationTable" style="display:none;">
        <div class="row">
            <div class="col search-container">
                <i class="fas fa-search"></i>
                <input class="input100" type="text" id="txtSearch" placeholder="Search transaction..." />
            </div>
            <div class="col text-right">
                <ul class="list-inline progress-list mt-2">
                    <li class="list-inline-item">
                        <div class="dropdown">
                            <button class="btn btn-primary login-btn" onclick='ExportDataExcel();' type="button" id="btnExport">
                                <i class="fas fa-file-export"></i> Export
                            </button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row mt-3" id="dvActivityData">
            <h5>Transaction Details</h5>
            <div class="table-responsive">
                <table class="table" id="activityTable">
                    <thead>
                        <tr>
                            <th scope="col">Enrolled Outlet</th>
                            <th scope="col">Mobile Number</th>
                            <th scope="col">Member Name</th>
                            <th scope="col">Txn Count</th>
                            <th scope="col">Total Spends</th>
                            <th scope="col">Avl Bal Points</th>
                            <th scope="col">Last Txn Date</th>                            
                            <th scope="col">Celebration Date</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<script>
    var clickedMonth = 0;
    var clickedType = 0;
    var tableData = [];
    function GetData(currentMonth, type) {
        var month = new Date().getMonth() + 1;
        var year = new Date().getFullYear();

        //if (currentMonth == 1) {
        //    month = month + 1;
        //}
        clickedMonth = currentMonth;
        clickedType = type;

        $("#divLoader").show();
        $.ajax({
            type: "POST",
            url: "../Reports/GetCelebrationsTxnResult",
            data: "{'month': " + currentMonth + ",'type': " + type + "}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                tableData.length = 0;                
                $.map(response, function (item) {
                    optionItem = {}
                    optionItem["EnrolledOutlet"] = item.EnrolledOutlet;
                    optionItem["MaskedMobileNo"] = item.MaskedMobileNo;
                    optionItem["MemberName"] = item.MemberName;
                    optionItem["TxnCount"] = item.TxnCount;
                    optionItem["TotalSpend"] = item.TotalSpend;
                    optionItem["AvlPoints"] = item.AvlPoints;
                    optionItem["LastTxnDate"] = item.LastTxnDate;
                    optionItem["CelebrationDate"] = item.CelebrationDate;
                    
                    tableData.push(optionItem);
                });
                DrawTable();
                $("#dvCelebrationTable").show();
                $("#dvTxnTable").show();

                $("#divLoader").hide();
            },
            failure: function (response) {
                $("#divLoader").hide();
            },
            error: function (response) {
                //$('#dvOutletWiseData').html(response.responseText);
                $("#divLoader").hide();
            }
        });
    }

    function DrawTable() {
        var table1 = $('#activityTable').DataTable();
        table1.destroy();

        var table = $('#activityTable').DataTable({
            "data": tableData,
            "paging": true,
            "ordering": true,
            "info": true,
            "bFilter": true,
            "pageLength": 25,
            "pagingType": "simple_numbers",
            "columns": [
                { data: "EnrolledOutlet" },
                { data: "MaskedMobileNo" },
                { data: "MemberName" },
                { data: "TxnCount" },
                { data: "TotalSpend" },
                { data: "AvlPoints" },
                { data: "LastTxnDate" },
                { data: "CelebrationDate" }

            ],
            aoColumnDefs: [
                {
                    bSortable: false,
                    aTargets: [-6, -7, -8]
                }
            ]
        });
        $('#activityTable_filter').hide();

        $('#txtSearch').on('keyup', function () {

            $.fn.dataTable.ext.search.push(function (settings, searchData) {
                var term = $('#txtSearch').val().toLowerCase()
                for (var i = 0; i < searchData.length; i++) {
                    if (searchData[i].toLowerCase().indexOf(term) == 0) {
                        return true;
                    }
                }
                return false;
            });
            var table = $('#activityTable').DataTable();
            table.draw();
        });
    }

    function ExportDataExcel() {

        var urlLink = "@Url.Action("ExportToExcelCelebrations", "Reports")";
        urlLink = urlLink + "?month=" + clickedMonth + "&type=" + clickedType + "&ReportName=Celebrations";
        console.log(urlLink);
        window.location.href = urlLink;
        $("#divLoader").hide();

    }

</script>

<style>
    table.dataTable thead .sorting_asc {
        background: url("https://cdn.datatables.net/1.10.0/images/sort_asc.png") no-repeat center left;
    }

    table.dataTable thead .sorting_desc {
        background: url("https://cdn.datatables.net/1.10.0/images/sort_desc.png") no-repeat center left;
    }

    table.dataTable thead .sorting {
        background: url("https://cdn.datatables.net/1.10.0/images/sort_both.png") no-repeat center left;
    }
</style>


