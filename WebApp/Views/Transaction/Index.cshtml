                        <div class="button-row d-flex mt-5" style="display:none !important;" id="dvModifyBtn">
                            <button class="btn btn-primary ml-auto" type="button" title="Delete" id="btnModifyTxn" tabindex="20">Update</button>
                        </div>
                        <div class="row mt-3" id="dvActivityDataModify" style="height:800px;">
                            <div class="table-responsive">
                                <table class="table" id="activityTableModify">
                                    <thead style="text-align:center;">
                                        <tr>
                                            <th scope="col">Date / Time</th>
                                            <th scope="col">Invoice No</th>
                                            <th scope="col">Invoice Amt</th>
                                            <th scope="col">Txn Type</th>
                                            <th scope="col">Points</th>
                                            <th scope="col">Txn Outlet</th>
