<script src="~/Content/scriptSteps.js"></script>

<script>
    $("#hdnGroupId").val(@Html.Raw(ViewBag.GroupId));
      var tableData = [];
      var tableLogData = [];
    $(document).ready(function () {
        var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
       // alert(today);

         $('#btnSearchMemberModify').on("click", function () {
            GetTransactionModifyData();
          });

         $("#txtRequestedDateModify").datepicker({
                        dateFormat: "yy-mm-dd",
                        maxDate: today,
         });
         $('#btnModifyTxn').on("click", function () {
              ModifyTransaction();
         });
         $("#hdnGroupId").val(@Html.Raw(ViewBag.GroupId));
      });
                function DrawTableModify() {
                    var table1 = $('#activityTableModify').DataTable();
                    table1.destroy();

                    var table = $('#activityTableModify').DataTable({

                        "data": tableData,
                        "paging": true,
                        "ordering": false,
                        "info": true,
                        "bFilter": true,
                        "pageLength": 10,
                        "pagingType": "simple_numbers",
                        "columns": [
                            { data: "Datetime" },
                            { data: "InvoiceNo" },
                            { data: "InvoiceAmt" },
                            { data: "TransactionName" },
                            { data: "Points" },
                            { data: "OutletName" },
                            {
                                "mData": "TransactionId",

                                "mRender": function (data, type, row) {
                                    return '<a href="#" onclick="GetTransactionToModify(\'' + data + '\')" class="login" title="Edit"><img src="Content/assets/images/shape_editUser.png" /></a>';


                                    //return '<button href="#"' + 'id="' + data + '">Edit</button>';
                                }
                            }
                        ],
                        aoColumnDefs: [
                            {
                                bSortable: false,
                                aTargets: []
                            }
                        ]
                    });
                    $('#activityTableModify_filter').hide();
                    $('#txtSearch').on('keyup', function () {

                        $.fn.dataTable.ext.search.push(function (settings, searchData) {
                            var term = $('#txtSearch').val().toLowerCase()
                            for (var i = 0; i < searchData.length; i++) {
                                if (searchData[i].toLowerCase().indexOf(term) >= 0) {
                                    return true;
                                }
                            }
                            return false;
                        });
                        var table = $('#activityTableModify').DataTable();
                        table.draw();
                    });
                }



    function GetTransactionModifyData() {
        var InvNo = "";
            if ($('#txtMobileNoModify').val() == "" && $('#txtInvoiceNoModify').val() == "") {
                toastr.error('Please enter Mobile Number OR Invoice Number');
                return false
            }
            if ($('#txtMobileNoModify').val() != "" && $('#txtInvoiceNoModify').val() != "") {
                toastr.error('Please enter Mobile Number OR Invoice Number');
                return false
            }
            if ($('#txtInvoiceNoModify').val() != "") {
                InvNo = $('#txtInvoiceNoModify').val();
            }

        $("#divLoader").show();
        $.ajax({

            type: "POST",
            url: '@Url.Action("GetCancelTxnData", "Transaction")',//"/ITOperations/GetCancelTxnData",
            data: '{GroupId: ' + JSON.stringify($('#hdnGroupId').val()) + ',MobileNo: ' + JSON.stringify($('#txtMobileNoModify').val()) + ',InvoiceNo: ' + JSON.stringify(InvNo) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.objCustomerDetail != null) {
                    $("#spnMemberNameModify").text(result.objCustomerDetail.CustomerName);
                    $("#spnMobilenoModify").text(result.objCustomerDetail.MobileNo);
                    $("#spnOldMobilenoModify").text(result.objCustomerDetail.OldMobileNo);
                    $("#spnCardNoModify").text(result.objCustomerDetail.CardNumber);
                    $("#spnPtBalanceModify").text(result.objCustomerDetail.Points);
                    if (result.objCancelTxnModel != null) {

                        $("#spnTransactionModify").text(result.objCancelTxnModel.TransactionName);
                        $("#spnInvoiceNoModify").text(result.objCancelTxnModel.InvoiceNo);
                        var index = result.objCancelTxnModel.InvoiceAmt.toString().indexOf('.');
                        if (index > -1) {
                            $("#spnInvoiceAmtModify").text(result.objCancelTxnModel.InvoiceAmt);
                        }
                        else {
                            $("#spnInvoiceAmtModify").text(result.objCancelTxnModel.InvoiceAmt+".00");
                        }
                        $("#spnPointsModify").text(result.objCancelTxnModel.Points);
                        $("#spnTransactionOutletModify").text(result.objCancelTxnModel.OutletName);
                        $("#spnTransactionDateTimeModify").text(result.objCancelTxnModel.Datetime);
                        $("#spnTransactionDateTimeModify").text(result.objCancelTxnModel.DatetimeOriginal);

                        $('#ddlRequestedForumModify').prop('selectedIndex', 0);
                        $("#tblUpdateDataModify").show();
                        $("#dvModifyBtn").show();
                        tableData.length = 0;



                    }
                    if (result.lstCancelTxnModel != null) {
                        tableData.length = 0;
                        $.map(result.lstCancelTxnModel, function (item) {
                            optionItem = {}
                            optionItem["Datetime"] = item.Datetime;
                            optionItem["InvoiceNo"] = item.InvoiceNo;
                            optionItem["InvoiceAmt"] = item.InvoiceAmt;
                            optionItem["TransactionName"] = item.TransactionName;
                            optionItem["Points"] = item.Points;
                            optionItem["OutletName"] = item.OutletName;
                            optionItem["TransactionId"] = item.TransactionId;
                            tableData.push(optionItem);
                        });
                        DrawTableModify();
                        $("#tblUpdateDataModify").hide();
                        $("#dvModifyBtn").attr('style', 'display:none !important');

                    }
                }
                else {
                    toastr.error('Transaction not present. Please check entered Mobile Number OR Invoice Number');
                    $("#tblUpdateDataModify").hide();
                }
                $("#divLoader").hide();
            },
            error: function (result) {
                console.log(result.responseText)
                $("#divLoader").hide();
            }
        });
    }

    function GetTransactionToModify(TransactionId) {

        $("#divLoader").show();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetModifyTxnData", "Transaction")',//"/ITOperations/GetCancelTxnData",
            data: '{TransactionId: ' + JSON.stringify(TransactionId) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {

                if (result.objCancelTxnModel != null) {
                    $("#hdnTransactionIdModify").val(TransactionId);
                        $("#spnTransactionModify").text(result.objCancelTxnModel.TransactionName);
                        $("#spnInvoiceNoModify").text(result.objCancelTxnModel.InvoiceNo);
                        var index = result.objCancelTxnModel.InvoiceAmt.toString().indexOf('.');
                        if (index > -1) {
                            $("#spnInvoiceAmtModify").text(result.objCancelTxnModel.InvoiceAmt);
                        }
                        else {
                            $("#spnInvoiceAmtModify").text(result.objCancelTxnModel.InvoiceAmt+".00");
                        }
                        $("#txtPointsModify").val(result.objCancelTxnModel.Points);
                        $("#spnTransactionOutletModify").text(result.objCancelTxnModel.OutletName);
                        $("#spnTransactionDateTimeModify").text(result.objCancelTxnModel.Datetime);
                        $("#spnTransactionDateTimeModify").text(result.objCancelTxnModel.DatetimeOriginal);

                        $('#ddlRequestedForumModify').prop('selectedIndex', 0);
                        $("#tblUpdateDataModify").show();
                        $("#dvModifyBtn").show();
                        tableData.length = 0;
                        DrawTableModify();
                }
                else {
                    toastr.error('Transaction not present. Please check entered Mobile Number OR Invoice Number');
                    $("#tblUpdateDataModify").hide();
                }
                $("#divLoader").hide();
            },
            error: function (result) {
                console.log(result.responseText)
                $("#divLoader").hide();
            }
        });
    }

    function ModifyTransaction() {

        if ($("#txtRequestedByNameModify").val() == "") {
            toastr.error('Please enter Requested Person name');
            $('#txtRequestedByNameModify').focus();
            return false;
        }
        else if ($("#txtRequestedDateModify").val() == "") {
            toastr.error('Please select transaction date');
            $('#txtRequestedDateModify').focus();
            return false;
        }
        else {
            var MemberData = [];
            item = {}
            item["GroupID"] = $("#hdnGroupId").val();
            item["Points"] = $("#txtPointsModify").val();
            item["TransactionId"] = $("#hdnTransactionIdModify").val();
            item["RequestedBy"] = $("#txtRequestedByNameModify").val();
            item["RequestedForum"] = $('#ddlRequestedForumModify :selected').text();
            item["RequestedOn"] = $("#txtRequestedDateModify").val();
            MemberData.push(item);
            var data = JSON.stringify(MemberData);

            $("#divLoader").show();
            $.ajax({
                type: "POST",
                url: '@Url.Action("ModifyTransaction", "Transaction")',//"/ITOperations/DeleteTransaction",
                data: '{jsonData: ' + JSON.stringify(data) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    console.log(111)
                },
                error: function (result) {
                    console.log(result.responseText)
                    if (result.responseText == "True") {
                        toastr.success("Points Modified Successfully !!!");
                        $("#tblUpdateDataModify").hide();
                        $("#divLoader").hide();
                    }
                    else {
                        toastr.error('error occured while updating data');
                        $("#divLoader").hide();
                    }
                }



            });


        }
    }

</script>

