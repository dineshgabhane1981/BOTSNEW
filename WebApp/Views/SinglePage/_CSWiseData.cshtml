@model WebApp.ViewModel.CSWiseDataViewModel



<div class="row mb-3 pt-3 pl-3 pr-3">
    @if (Model != null)
    {
        foreach (var item in Model.lstUniqueCSNames)
        {

            <div>
                <table border="1" cellpadding="10" cellspacing="10">
                    <tr style="background-color:lightgray;">
                        <th>@item.RMAssignedName</th>
                    </tr>

                    @foreach (var item1 in Model.lstData)
                    {
                        if (item.RMAssignedName == item1.RMAssignedName)
                        {
                            if (item1.days != 0)
                            {
                                <tr>
                                    <td> @item1.GroupName (@item1.days days) </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td> @item1.GroupName (never discussed) </td>
                                </tr>
                            }
                        }
                    }

                </table>
            </div>
        }
    }
</div>