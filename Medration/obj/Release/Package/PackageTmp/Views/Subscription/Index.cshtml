<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function ShowDetails(type) {
        $(".badge").css("border-top", "0px dashed red");
        $("#t" + type).css("border", "1px dashed red");
        $("#t1" + type).css("border", "1px dashed red");


            $.ajax({
                type: "POST",
                url: '@Url.Action("LoadDetails", "Subscription")',
                data: '{num: ' + JSON.stringify(type) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    $("#dvAllDetails").html(response);

                    //$("#divLoader").hide();
                },
                failure: function (response) {
                    //$("#divLoader").hide();
                },
                error: function (response) {
                    $("#dvAllDetails").html(response.responseText);
                    $("#dvAllDetails").show(800);
                    //$("#divLoader").hide();
                }
            });

     }
</script>
