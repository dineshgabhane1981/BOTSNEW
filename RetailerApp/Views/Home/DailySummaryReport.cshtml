    </div>
</div>
<script>
    $(document).ready(function () {
        $('#groupListTable').DataTable({
            "aaSorting": [[1, "asc"]],
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false,
            "pageLength": 10,
            "pagingType": "simple_numbers",
            aoColumnDefs: [
                {
                    bSortable: false,
                    aTargets: [-1, -2]
                }
            ]
        });
    });
</script>
