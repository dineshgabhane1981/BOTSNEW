
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-main__inner" id="dvDailySummary">
    <div class="container-fluid pt-3 pl-3 pr-3 pb-3">
        <div class="row" style="margin-top : 20px; padding-bottom : 20px">
            <div class="col-sm-4">
                <b>Daily Summary Report</b>
            </div>
        </div>
        <div class="mb-3 pr-3 pt-3 pl-3 card" style="padding-bottom:20px;">
            <div>

                <div class="table-responsive">
                    <table class="table" id="groupListTable">
                        <thead>
                            <tr>
                                <th scope="col" style="text-align:center;">Total Enrol</th>
                                <th scope="col" style="text-align: center;">Earn Txns</th>
                                <th scope="col" style="text-align: center;">Total Earn Txn Amt</th>
                                <th scope="col" style="text-align: center;">Points Issued</th>
                                <th scope="col" style="text-align:center;">Redeem Txn</th>
                                <th scope="col" style="text-align:center;">Total Redeem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.DailyReport.Count > 0)
                            {                                   
                                        foreach (var item in ViewBag.DailyReport)
                                        {
                                            <tr>
                                                <td style="text-align:center;">@item.TotalEnrolment</td>

                                                <td style="text-align:center;">@item.EarnTxnCount</td>

                                                <td style="text-align:center;">@item.EarnTxnAmt</td>

                                                <td style="text-align:center;">@item.EarnPoints</td>

                                                <td style="text-align:center;">@item.BurnTxnCount</td>

                                                <td style="text-align:center;">@item.BurnTxnAmt</td>
                                            </tr>
                                        }                                
                            }
                        </tbody>
                    </table>
                </div>
