@model List<BOTS_BL.Models.ChitaleModel.PointLedgerModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-main__inner">
    <div class="row" style="margin-left:10px;margin-right:10px;">
        <div class="row mb-3 pt-3 pl-3 pr-3 card">
            <div id="dvOutletWiseData">
                <b>DETAILED POINTS LEDGER</b>
                <div class="row mb-3">
                    <div class="container-fluid pt-3 pl-3 pr-3">
                        <div class="pt-3 pl-3 pr-3 col-md-12 col-lg-12">
                            <div class="row">
                                <div class="col search-container">
                                    <i class="fas fa-search"></i>
                                    <input class="input100" type="text" id="txtSearch" placeholder="Search activity..." />
                                </div>
                                <div class="col text-right">
                                    <ul class="list-inline progress-list mt-2">
                                        <li class="list-inline-item">
                                            <div class="dropdown">
                                                @*<button class="btn btn-primary login-btn" onclick='ExportDataExcel();' type="button" id="btnExport">
                                                    <i class="fas fa-file-export"></i> Export
                                                </button>*@
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row" id="divactivityTable">

                                <div class="table-responsive">
                                    <table class="table" id="activityTable">
                                        <thead>
                                            <tr>
                                                <th scope="col"></th>
                                                <th scope="col">Txn Type</th>
                                                <th scope="col">Sub-Type</th>
                                                <th scope="col">Ref No.</th>
                                                <th scope="col">Amt (RS)</th>
                                                <th scope="col">Base Pts</th>
                                                <th scope="col">Add-on Pts</th>
                                                <th scope="col">Lost Opp Pts</th>
                                                <th scope="col">Order Date</th>
                                                <th scope="col">Ravana Date</th>
                                                <th scope="col">Days Diff</th>
                                                <th scope="col">Net Earn Points</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.Count > 0)
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        var imgId = "imgExpand" + item.RefNo;
                                                        <tr style="text-align:center;">
                                                            <td style="text-align:center;">
                                                                <img id="@imgId" src="~/Content/assets/images/details_open.png" style="cursor:pointer;" onclick="ShowActivities(@item.RefNo);" />
                                                            </td>
                                                            <td>@item.TxnType</td>
                                                            <td>@item.SubType</td>
                                                            <td>@item.RefNo</td>
                                                            <td>@item.Amount</td>
                                                            <td>@item.BasePoints</td>
                                                            <td>@item.AddOnPoints</td>
                                                            <td>@item.LostOppPoints</td>
                                                            <td>@item.OrderDate</td>
                                                            <td>@item.RavanaDate</td>
                                                            <td>@item.DaysDiff</td>
                                                            <td>@item.NetEarnPoints</td>
                                                        </tr>
                                                        var dynamicIdTr = "trActivities" + item.RefNo;
                                                        var dynamicIdDiv = "dvActivities" + item.RefNo;
                                                        <tr id="@dynamicIdTr" style="display:none;">
                                                            <td colspan="12">
                                                                <div id="@dynamicIdDiv" style="display:none;" class="table-responsive">

                                                                </div>
                                                            </td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                            <td style="display:none;"></td>
                                                        </tr>
                                                    }

                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="12" align="center">No Data Available</td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="12" align="center">No Data Available</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#activityTable').DataTable({
            "aaSorting": [],
            "paging": true,
            "ordering": false,
            "info": true,
            "bFilter": true,
            "pageLength": 10,
            "pagingType": "simple_numbers",
            //language: {
            //    paginate: {
            //        next: '&#8594;', // or '→'
            //        previous: '&#8592;' // or '←'
            //    }
            //}
            aoColumnDefs: [
                {
                    bSortable: false,
                    aTargets: [-1, -2]
                }
            ]
        });

        $('#activityTable_filter').hide();

        $('#txtSearch').on('keyup', function () {

            $.fn.dataTable.ext.search.push(function (settings, searchData) {
                var term = $('#txtSearch').val().toLowerCase()
                for (var i = 0; i < searchData.length; i++) {
                    if (searchData[i].toLowerCase().indexOf(term) == 0) {
                        return true;
                    }
                }
                return false;
            });
            var table = $('#activityTable').DataTable();
            table.draw();
        });

        //$(".first.paginate_button, .last.paginate_button").hide();
    });

    function ShowActivities(id) {
         
        if ($("#dvActivities" + id).is(":visible")) {
            $("#dvActivities" + id).hide(1000);
            $("#trActivities" + id).hide(1000);

            $("#imgExpand" + id).attr("src", "/Content/assets/images/details_open.png");
        }
        else {
            $("#divLoader").show();
            $.ajax({
                type: "POST",
                 url: '@Url.Action("GetInvoiceOrders")',
                data: '{id: ' + JSON.stringify(id) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    console.log(response);
                    BindActivities(id, response);
                    $("#divLoader").hide();
                },
                failure: function (response) {
                    swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went Wrong!'
                    })
                    $("#divLoader").hide();
                }
            });
        }

    }
    function BindActivities(id,data) {
        console.log(data);
        var htmlStr = "<table border=\"2\" style=\"background-color:gray;margin-left: 115px;width: 88%;\" class=\"table\">";
        htmlStr += "<tr style=\"text-align: center;\">"
       
        htmlStr += "<th scope=\"col\">Sub-Type</th>";
        htmlStr += "<th scope=\"col\">Ref No.</th>";
        htmlStr += "<th scope=\"col\">Amt (RS)</th>";
        htmlStr += "<th scope=\"col\">Base Pts</th>";
        htmlStr += "<th scope=\"col\">Add-on Pts</th>";
        htmlStr += "<th scope=\"col\">Lost Opp Pts</th>";
        htmlStr += "<th scope=\"col\">Order Date</th>";
        htmlStr += "<th scope=\"col\">Ravana Date</th>";
        htmlStr += "<th scope=\"col\">Days Diff</th>";
        htmlStr += "<th scope=\"col\">Net Earn Points</th>";
        htmlStr += "</tr>";
        $.map(data, function (item) {
            htmlStr += "<tr style=\"text-align: center;\">"
            
            //htmlStr += "<td>" + item.TxnType + "</td>";
            htmlStr += "<td>" + item.SubType + "</td>";
            htmlStr += "<td>" + item.RefNo + "</td>";
            htmlStr += "<td>" + item.Amount + "</td>";
            htmlStr += "<td>" + item.BasePoints + "</td>";
            htmlStr += "<td>" + item.AddOnPoints.toFixed(2) + "</td>";
            htmlStr += "<td>" + item.LostOppPoints.toFixed(2) + "</td>";
            htmlStr += "<td>" + item.OrderDate + "</td>";
            htmlStr += "<td>" + item.RavanaDate + "</td>";
            htmlStr += "<td>" + item.DaysDiff + "</td>";
            htmlStr += "<td>" + item.NetEarnPoints + "</td>";
            htmlStr +="</tr>"
         });

        htmlStr += "</table>";
        $("#dvActivities" + id).html(htmlStr);

        $("#trActivities" + id).show(1000);
        $("#dvActivities" + id).show(1000);
        $("#imgExpand" + id).attr("src", "/Content/assets/images/details_close.png");

    }


</script>
