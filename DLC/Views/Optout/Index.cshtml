            display: flex;
            background-color: #5ea8f229;
            padding: 30px;
            border-radius: 8px;
        }

        .content-item {
            flex: 1;
            margin-right: 10px;
        }

            .content-item:last-child {
                margin-right: 0;
            }

        .label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        #accountValue,
        #pointsValue,
        #cashValue {
            display: block;
            color: #333;
            font-size: 14px;
        }

