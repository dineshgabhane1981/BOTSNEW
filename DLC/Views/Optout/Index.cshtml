@model BOTS_BL.Models.DLCDashboardContent
@using System.Globalization
@using BOTS_BL.Models;
@using DLC.ViewModel;

@{
    ViewBag.Title = "Index";
    Layout = null;
    var sessionVariables = (SessionVariables)Session["SessionVariables"];
    var logoUrl = sessionVariables.objDashboardConfig.UseLogoURL;
    var logoSize = sessionVariables.objDashboardConfig.UseLogo;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="user-scalable=no">
    <title>Opt Out</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
          rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kit.fontawesome.com/407b165ed6.js" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <style>
        .footer {
            background-color: #344966;
            height: 10vh;
        }
        .card {
            margin-top: 133px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 92%;
            margin-left: 4%;
            margin-bottom: 4%;
        }

        .card-body {
            padding: 30px;
        }

        .label {
            font-weight: bold;
            margin-bottom: 10px;
            display: block;
        }

        .btn-custom {
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 5px;
        }

        .button-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-top: 4%;
        }

        .btn-success,
        .btn-danger {
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 5px;
            width: 21%;
        }

        .button-item {
            flex: 1;
            margin-bottom: 10px;
        }

        .label {
            font-weight: bold;
            margin-bottom: 10px;
            display: block;
            font-size: 16px;
        }

        .start-button,
        .stop-button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-left: 42%;
            margin-top: 4%;
        }

        .start-button {
            background-color: #4CAF50; /* Green */
            color: white;
        }

        .stop-button {
            background-color: #f44336; /* Red */
            color: white;
        }

