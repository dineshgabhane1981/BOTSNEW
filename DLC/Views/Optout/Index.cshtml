    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="text-center" style="text-align: center; margin-bottom: 2%;">OPTOUT</h1>
                <div class="content-row">
                    <div class="content-item">
                        <span class="label">My Account</span>
                        <span id="accountValue">@Model.MobileNo</span>
                    </div>
                    <div class="content-item">
                        <span class="label">My Points</span>
                        <span id="pointsValue">@String.Format(new CultureInfo("en-IN", false), "{0:n2}", Convert.ToDouble(Model.EarnPoints))</span>
                    </div>
                    <div class="content-item">
                        <span class="label">My Cash</span>
                        <span id="cashValue">Rs. @String.Format(new CultureInfo("en-IN", false), "{0:n2}", Convert.ToDouble(Model.EarnPoints * Model.PointsToRS))</span>
                    </div>
                </div>
                <div class="button-row">
                    <div class="button-item">
                        <label class="label">Receive Promotion Messages Through SMS and/or Whatsapp</label>
                        <button class="start-button" id="btnStartPromotions" onclick="togglePromotion(0)" style="display: none;">Start</button>
                        <button class="stop-button" id="btnStopPromotions" style="display: none;" onclick="togglePromotion(1)">Stop</button>
                    </div>
                    <div class="button-item">
                        <label class="label">Membership in the Loyalty Program</label>
                        <button class="start-button" id="btnContinueMembership" style="display: none;" onclick="toggleMembership(1)">Continue</button>
                        <button class="stop-button" id="btnDiscontinueMembership" style="display: none;" onclick="toggleMembership(0)">Discontinue</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="footer" style="text-align:end;padding-right:20px;">
        @if (!string.IsNullOrEmpty(sessionVariables.objDashboardConfig.FacebookUrl))
        {
            <a id="HlnkinstagramURL" target="_blank" href="@sessionVariables.objDashboardConfig.FacebookUrl">
                <img src="~/img/facebook.svg" />
            </a>
        }
        @if (!string.IsNullOrEmpty(sessionVariables.objDashboardConfig.InstagramUrl))
        {
            <a id="HlnkinstagramURL" target="_blank" href="@sessionVariables.objDashboardConfig.InstagramUrl">
                <img src="~/img/instagram.svg" />
            </a>
        }
        @if (!string.IsNullOrEmpty(sessionVariables.objDashboardConfig.TwitterUrl))
        {
            <a id="HlnkinstagramURL" target="_blank" href="@sessionVariables.objDashboardConfig.TwitterUrl">
                <img src="~/img/twitterx.svg" />
            </a>
        }
        @if (!string.IsNullOrEmpty(sessionVariables.objDashboardConfig.YoutubeURL))
        {
            <a id="HlnkinstagramURL" target="_blank" href="@sessionVariables.objDashboardConfig.YoutubeURL">
                <img src="~/img/youtube.svg" />
            </a>
        }
        @if (!string.IsNullOrEmpty(sessionVariables.objDashboardConfig.WhatsappUrl))
        {
            <a id="HlnkinstagramURL" target="_blank" href="@sessionVariables.objDashboardConfig.WhatsappUrl">
                <img src="~/img/whatsapp.svg" />
            </a>
        }
    </section>

    <script>
    function togglePromotion(button) {      
        var isStartVisible = true;
        if (button == 0)
            isStartVisible = false;

        $("#divLoader").show();
        $.ajax({
            type: "POST",
            url: '@Url.Action("UpdateOptout", "Optout")',
            data: JSON.stringify({ IsOptout: isStartVisible }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(result) {
                console.log(result);
                if (result) {
                    window.location.reload();
                } else {
                    // handle error case or leave as is
                }
            },
            error: function(xhr, status, error) {
                toastr.error('An error occurred: ' + error);
            },
            complete: function() {
                $("#divLoader").hide();
            }
        });
    }

    function toggleMembership(button) {
       
        var isContinueVisible = true;
        if (button == 0)
            isContinueVisible = false;

        $("#divLoader").show();
        $.ajax({
            type: "POST",
            url: '@Url.Action("Update1Optout", "Optout")',
            data: JSON.stringify({ IsOptout: isContinueVisible }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(result) {
                console.log(result);
                if (result) {
                    window.location.reload();
                } else {
                    // handle error case or leave as is
                }
            },
            error: function(xhr, status, error) {
                toastr.error('An error occurred: ' + error);
            },
            complete: function() {
                $("#divLoader").hide();
            }
        });
    }

