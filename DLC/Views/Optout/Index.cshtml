            .label {
                font-weight: bold;
                margin-bottom: 10px;
                display: block;
            }

            .button-row {
                margin-top: 4%;
            }

            .button-item {
                margin-bottom: 10px;
            }

            .start-button,
            .stop-button {
                padding: 10px 20px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                /*margin-left: 5%;
                margin-top: 15%;*/
                margin-left: 2%;
                margin-top: 2%;
            }
        }

        @@media screen and (min-width:375px) {

            .label {
                font-weight: 800;
                margin-bottom: 10px;
                display: block;
            }


            .button-row {
                margin-top: 4%;
            }


            .start-button,
            .stop-button {
                padding: 10px 20px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
