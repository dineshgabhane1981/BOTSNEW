    <section class="update">
        <div class="container">
            <div class="col-md-6">
                <div class="form" style="margin-bottom: 6%;">
                    <!-- <h2>Update Profile</h2> -->
                    <form asp-controller="update" asp-action="UpdateProfile" method="post">
                        <div class="form-row">
                            @foreach (var item in Model.lstProfileData)
                            {
                                if (item.DisplayStatus)
                                {
                                    var mandatory = item.MandStatus ? "*" : ""; // Red asterisk for mandatory fields

                                    if (item.FieldName == "DateOfBirth")
                                    {
                                        var dob = "";
                                        if (item.Value != null)
                                        {
                                            dob = DateTime.ParseExact(item.Value, "yyyy/MM/dd", CultureInfo.InvariantCulture).ToString("yyyy-MM-dd");
                                        }

                                        var id = "txt" + item.FieldName;

                                        var minDate = DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd");
                                        var maxDate = DateTime.Today.AddYears(-100).ToString("yyyy-MM-dd");

                                        <div class="form-row">

                                            <label for="@id">Date of Birth<span style="color:red;">@mandatory</span></label>

                                            <input type="date"
                                                   id="@id"
                                                   value="@dob"
                                                   class="input100"
                                                   required="@item.MandStatus"
                                                   min="@maxDate"
                                                   max="@minDate"
                                                   placeholder="yyyy-mm-dd" />

                                        </div>

                                    }

                                    else if (item.FieldName == "Gender")
                                    {
                                        var id = "ddl" + item.FieldName; // Unique ID for the drop-down
                                        <div class="form-row">
                                            <label for="@id">Gender<span style="color:red;">@mandatory</span></label> <!-- Include label -->
                                            @Html.DropDownListFor(
                                                          model => model.dummyGender,
                                                          new SelectList(Model.Gender(), "Value", "Text"),
                                                          "Please Select",
                                                          new { @id = id, @class = "input100" }
                                                      )
                                        </div>
                                    }
                                    else if (item.FieldName == "MaritalStatus")
                                    {
                                        var id = "ddl" + item.FieldName;
                                        <div class="form-row">
                                            <label for="@id">Marital Status<span style="color:red;">@mandatory</span></label> <!-- Include label -->
                                            @Html.DropDownListFor(
                                                          model => model.dummyMaritalStatus,
                                                          new SelectList(Model.MaritalStatus(), "Value", "Text"),
                                                          "Please Select",
                                                          new { @id = id, @class = "input100" }
                                                      )
                                        </div>
                                    }
                                    else if (item.FieldName == "City")
                                    {
                                        var id = "txt" + item.FieldName; // Unique ID for text fields
                                        <div class="form-row">
                                            <label for="@id">City<span style="color:red;">@mandatory</span></label> <!-- Corrected label -->
                                            <input type="text"
                                                   id="@id"
                                                   class="input100"
                                                   placeholder="Enter City"
                                                   value="@item.Value"
                                                   required="@item.MandStatus" />
                                        </div>
                                    }
                                    else if (item.FieldName == "Pincode")
                                    {
                                        var id = "txt" + item.FieldName;
                                        <div class="form-row">
                                            <label for="@id">Pincode<span style="color:red;">@mandatory</span></label> <!-- Include label -->
                                            <input type="number"
                                                   id="@id" // Unique ID for number fields
                                                   class="input100"
                                                   placeholder="Enter Pincode"
                                                   value="@item.Value"
                                                   required="@item.MandStatus" />
                                        </div>
                                    }
                                    else // Default case for other text fields
                                    {
                                        var id = "txt" + item.FieldName;
                                        <div class="form-row">
                                            <label for="@id">@item.FieldName<span style="color:red;">@mandatory</span></label> <!-- Include label -->
                                            <input type="text"
                                                   id="@id"
                                                   class="input100"
                                                   placeholder="Enter @item.FieldName"
                                                   value="@item.Value"
                                                   required="@item.MandStatus" />
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <button type="button" id="btnUpdateProfile" class="start-button" onclick="UpdateProfile();">Update</button>
                        <div style="margin-top:20px;" class="note">
                            <p>
                                <b style="font-weight:bold;">Note: </b>Bonus Points for Profile Update will be credited only for the first time. No bonus points will be credited for subsequent updates
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script>
        window.onscroll = function () {
            var navbar = document.querySelector('.sticky-nav');
            if (window.pageYOffset > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        };
        function Hamburger() {
            var hamburger = document.querySelector('.hamburger');
            var menu = document.querySelector('.menu-container1');
            var logo = document.querySelector('.logo');

            var isMenuVisible = false;

            hamburger.addEventListener('click',
                function () {
                    if (!isMenuVisible) {
                        menu.style.display = 'block';
                        menu.style.transform = 'translateY(0)';
                        isMenuVisible = true;
                        logo.style.display = 'none';
                    } else {
                        menu.style.transform = 'translateY(-100vh)';
                        isMenuVisible = false;
                        logo.style.display = 'block';
                    }
                });
        }

        Hamburger();
    </script>

    <script>
    $(document).ready(function () {
        var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
        $('#IdStrDate').datepicker({
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0"
        });
    });

    function UpdateProfile() {
        var status = true;
        var model = @Html.Raw(Json.Encode(Model.lstProfileData));
        console.log(model);

        $.map(model, function (item) {
            if (item.DisplayStatus) {
                if (item.MandStatus) {
                    if (item.FieldName == "Gender" || item.FieldName == "MaritalStatus") {
                        if ($("#ddl" + item.FieldName).val() == "Please Select" || $("#ddl" + item.FieldName).val() == "") {
                            toastr.error('please select ' + item.FieldName);
                            status = false;
                            return false;
                        }
                    } else {
                        if (item.FieldName == "DateOfBirth") {
                            if ($("#txt" + item.FieldName).val() == "Please Select" || $("#txt" + item.FieldName).val() == "") {
                                toastr.error('please enter ' + item.FieldName);
                                status = false;
                                return false;
                            }
                            else {
                                var selectedDate = $("#txt" + item.FieldName).val();
                                var sDate = new Date(selectedDate);
                                sDate.setFullYear(sDate.getFullYear() + 18);
                                var currdate = new Date();

                                if (currdate < sDate) {
                                    toastr.error('Date of birth can not be less than 18 years');
                                    status = false;
                                    return false;
                                }
                            }
                        }
                        else if ($("#txt" + item.FieldName).val() == "Please Select" || $("#txt" + item.FieldName).val() == "") {
                            toastr.error('please enter ' + item.FieldName);
                            status = false;
                            return false;
                        }
                    }
                }
            }
        });

        if (status) {
            //alert(777);
            var profileData = [];
            var optionItem = {};

            $.map(model, function (item) {
                optionItem[item.FieldName] = "";
                if (item.DisplayStatus) {
                    if (item.FieldName == "Gender" || item.FieldName == "MaritalStatus") {
                        optionItem[item.FieldName] = $("#ddl" + item.FieldName).val();
                    } else if (item.FieldName == "DateOfBirth") {
                        var id = "txt" + item.FieldName;
                        optionItem[item.FieldName] = $("#" + id).val();
                    } else {
                        optionItem[item.FieldName] = $("#txt" + item.FieldName).val();
                    }
                }
            });

            profileData.push(optionItem);
            console.log(profileData);
            var profileDataStr = JSON.stringify(profileData);
            $("#divLoader").show();


            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateProfileData", "PersonalDetails")',
                data: JSON.stringify({ jsonData: profileDataStr }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result)
                {
                    if (result == true)
                    {
                        //toastr.options = {
                        //    "timeOut": "5000", // Duration in milliseconds (5000ms = 5 seconds)
                        //    "extendedTimeOut": "1000" // Extended time out after hover in milliseconds
                        //};
                        toastr.success('Profile updated successfully !!!');
                        $("#divLoader").hide();
                    } else {
                        toastr.error('There is problem in updating the profile. Please contact Administrator !!!');
                        $("#divLoader").hide();
                    }
                },
                error: function (result) {
                    console.error(result);
                }
            });
        }
    }
    </script>

