    <script>
        function showModal() {
            document.getElementById("missingFieldModal").style.display = "block";
        }

        function hideModal() {
            document.getElementById("missingFieldModal").style.display = "none";
        }

        function checkAndPromptMissingField() {
            var mobileNumber = "@MobileNo"; // Ensure this is correctly passed from your backend
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "Dashboard/GetUserDetails", true);
            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            xhr.onreadystatechange = function() {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var response = JSON.parse(xhr.responseText);
                    if (response.success && response.missingField) {
                        var missingField = response.missingField;
                        var id = response.id;

                        // Set the modal fields
                        document.getElementById("missingFieldLabel").innerText = "Please enter your " + missingField + ":";
                        document.getElementById("missingField").value = missingField;
                        if (missingField == "Name") {
                            var cntrl = "<input type='text' id='missingFieldValue' class='form-control' required>";
                        }
                        if (missingField == "BirthDate" || "AnniversaryDate") {
                            var cntrl = "<input type='date' id='missingFieldValue' class='form-control' required>";
                        }
                        if (missingField == "Gender") {
                            var cntrl = "<select  id='missingFieldValue' class='form-control' required>";
                            cntrl = cntrl + "<option value='M'>Male</option>";
                            cntrl = cntrl + "<option value='F'>Female</option>";
                        }
                        $("#dvmissingField").html(cntrl);
                        document.getElementById("userId").value = id;

                        // Show the modal
                        showModal();
                    } else if (!response.success) {
                        //alert(response.message); // Replace with a custom alert function if needed
                        toastr.error('An error occurred: ' + response.message);
                    }
                }
            };
            xhr.send("mobileNumber=" + encodeURIComponent(mobileNumber));
        }

        function saveMissingField() {
            var id = document.getElementById("userId").value;
            var field = document.getElementById("missingField").value;
            var value = document.getElementById("missingFieldValue").value;

            if (!id || !field || !value) {
                //alert("Please fill out all required fields."); // Replace with a custom alert function if needed
                toastr.error("Please fill out all required fields.");
                return;
            }

            var data = JSON.stringify({
                id: id,
                field: field,
                value: value
            });

            var xhr = new XMLHttpRequest();
            xhr.open("POST", "Dashboard/UpdateUserDetails", true);
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.onreadystatechange = function() {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var response = JSON.parse(xhr.responseText);
                    if (response.success) {
                        //alert(response.message); // Replace with a custom alert function if needed
                        toastr.success(response.message);
                        hideModal();
                    } else {
                        toastr.error(response.message); // Replace with a custom alert function if needed
                    }
                }
            };
            xhr.onerror = function() {
                //console.error("Error updating user details");
                //alert("An error occurred while updating user details."); // Replace with a custom alert function if needed
                toastr.error("An error occurred while updating user details.");
            };
            xhr.send(data);
        }

        document.addEventListener("DOMContentLoaded", function() {
            var status = @Flag; // Ensure this is correctly passed from your backend
            if (status) {
                checkAndPromptMissingField();
            }
        });

    </script>
